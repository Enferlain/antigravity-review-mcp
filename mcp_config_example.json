{
  "mcpServers": {
    "review-mcp": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/Enferlain/antigravity-review-mcp",
        "review-mcp",
        "--workspace-dir",
        "D:/Projects/your-repo"
      ],
      "env": {
        "ZHIPU_API_KEY": "your-api-key-here"
      }
    }
  }
}
